<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".answer_activities.AnswerViewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Answer By"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="16dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Student Name"
                android:id="@+id/answerViewName"
                android:layout_toStartOf="@+id/answerViewDate"
                android:maxLines="2"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView10"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="27/8/2016"
                android:id="@+id/answerViewDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/answerViewStatus"
                android:layout_below="@+id/answerViewDate"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Answer"
                android:id="@+id/textView11"
                android:layout_below="@+id/answerViewStatus"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Answer Description"
                android:id="@+id/answerViewAnswer"
                android:layout_alignTop="@+id/textView11"
                android:minLines="2"

                android:layout_alignEnd="@+id/answerViewStatus"
                android:layout_alignStart="@+id/answerViewName"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/answerImage"
                android:layout_below="@+id/answerViewAnswer"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Is this answer has helped you..?"
                android:id="@+id/status_question_text"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/answerImage"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="YES"
                android:id="@+id/positiveAnswerView"
                android:textColor="#08d704"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/status_question_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note :- This answer was helpful to the user who posted it. The check sign does not indicate that it is the best answer....."
                android:id="@+id/noticeText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textIsSelectable="true"
                android:textSize="13sp"
                android:textColor="#0c8b00"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
