<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".main_activities.ProfileFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/splash1_1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NameLayout"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/userImageButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/android"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="25sp"
                android:textColor="#07fe66"
                android:textStyle="bold|italic"
                android:layout_below="@+id/userImageButton"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="anshul132vanawat"
                android:id="@+id/ratidText"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/userNameText"
                android:layout_centerHorizontal="true"
                android:textColor="#35f290"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"

            >

            <TextView
                android:id="@+id/my_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Question"
                android:textSize="20sp"
                android:layout_alignBottom="@+id/linearLayout2"
                android:layout_alignParentEnd="true"
                android:background="#fde1bc" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="291dp"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:id="@+id/linearLayout2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textSize="20dp"
                android:textColor="#35f290"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@null"
                android:text="email"
                android:textColor="#07fe66"
                android:textStyle="bold|italic"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignStart="@+id/dateOfBirthTextView" />
            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:layout_below="@+id/dob"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp" />
            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Birth"
                android:textSize="20sp"
                android:layout_below="@+id/emailId"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp" />
            <TextView
                android:id="@+id/contactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:background="@null"
                android:text="7790806941"
                android:textColor="#07fe66"
                android:textStyle="bold|italic"
                android:layout_below="@+id/genderTextView"
                android:layout_toEndOf="@+id/contactInfo"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:id="@+id/textView8"
                android:layout_below="@+id/contactInfo"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Contact no."
                android:id="@+id/textView9"
                android:layout_below="@+id/gender"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="setDate"
                android:id="@+id/dateOfBirthTextView"
                android:textSize="20sp"
                android:text="14/01/1995"
                android:background="#fddfdf"
                android:layout_below="@+id/emailId"
                android:layout_alignStart="@+id/genderTextView"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/genderTextView"
                android:textSize="20sp"
                android:text="Male/Female"
                android:background="#fddfdf"
                android:layout_below="@+id/dateOfBirthTextView"
                android:layout_alignStart="@+id/contactno"
                android:layout_marginTop="25dp" />


        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:layout_gravity="center_horizontal"
            android:typeface="serif"
            android:translationZ="@dimen/design_bottom_sheet_modal_elevation"
            android:backgroundTint="#bff6dc"
            android:id="@+id/profileSubmit" />

    </LinearLayout>
</ScrollView>
